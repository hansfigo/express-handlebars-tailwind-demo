<form
  action="/auth/login"
  method="POST"
  class="max-w-sm mx-auto p-6 bg-white shadow-md rounded-lg space-y-4"
>
  <h2 class="text-2xl font-semibold text-center text-gray-700">Login</h2>

  <!-- Email Input -->
  <div class="flex flex-col">
    <label for="email" class="text-sm font-medium text-gray-600">Email</label>
    <input
      name="email"
      type="email"
      id="email"
      required
      class="mt-2 p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
    />
  </div>

  <!-- Password Input -->
  <div class="flex flex-col">
    <label
      for="password"
      class="text-sm font-medium text-gray-600"
    >Password</label>
    <input
      name="password"
      type="password"
      id="password"
      required
      class="mt-2 p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
    />
  </div>

  <!-- Submit Button -->
  <button
    type="submit"
    class="w-full p-3 mt-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
  >
    Submit
  </button>

  {{#if error}}
    <div class="text-red-500 mt-4">{{error}}</div>
  {{/if}}
</form>